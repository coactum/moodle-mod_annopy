<div class="annopy_pagination">
    <form action="view.php?id={{cmid}}" method="post">
        <input type="hidden" name="id" value="{{cmid}}">
        <input type="hidden" name="sesskey" value="{{sesskey}}">

        <div class="mt-1">
            <ul class="pagination">
                {{#pagebar}}
                    <li class="page-item">
                        <a class="page-link" href="view.php?id={{cmid}}&userid={{userid}}">{{{display}}}</a>
                    </li>
                {{/pagebar}}
            </ul>
        </div>
    </form>
</div>